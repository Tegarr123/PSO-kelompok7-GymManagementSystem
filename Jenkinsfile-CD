pipeline{
    agent any
    environment{
        USERNAME = "fadhinotgr"
        IMAGE_NAME = "gym-management-system-app"
        JENKINS_API_TOKEN = "1163fb8a9fdf9b8dcb5ca4a7ad422c09f7"
        TRIGGER_TOKEN = "local_token"

    }
    stages{
        stage("docker push image"){
            steps{
                script{
                    withDockerRegistry(credentialsId: 'docker') {
                        sh "docker push ${USERNAME}/${IMAGE_NAME}:latest"
                    }
                }
            }
        }
        stage("cleanup artifact image"){
            steps{
                script{
                    sh "docker rmi ${USERNAME}/${IMAGE_NAME}:latest"
                }
            }
        }
        stage("Deploy to kubernetes"){
            steps{
                script{
                    sh "kubectl apply -f gym-app.yaml"
                }
            }
        }
    }
}