pipeline{
    agent any
    environment{
        USERNAME = "fadhinotgr"
        IMAGE_NAME = "gym-management-system-app"

    }
    stages{
        stage("Cleanup workspace"){
            steps{
                cleanWs()
            }
        }
        stage("git checkout"){
            steps{
                git branch: 'dev-tegar', credentialsId: 'github', url: 'https://github.com/Tegarr123/PSO-kelompok7-GymManagementSystem.git'
            }
        }
        stage("docker build app"){
            steps{          
                sh "docker image build -t ${USERNAME}/${IMAGE_NAME}:latest ."
            }
        }
        stage("test app"){
            steps{
                sh "docker run -d fadhinotgr/gym-management-system-app:latest pytest test.py"
            }
        }
    }
}